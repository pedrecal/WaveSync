{
  "name": "wavesync",
  "private": true,
  "version": "0.1.0",
  "description": "A tool for synchronizing subtitle files with audio waveforms",
  "author": "pedrecal",
  "type": "module",
  "main": "electron/main.cjs",
  "electron": {
    "type": "commonjs"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "lint": "eslint . --ext .js,.ts,.svelte",
    "lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "test:watch": "vitest watch",
    "electron:dev": "concurrently \"ELECTRON=true vite\" \"wait-on http://localhost:5173 && electron electron/main.cjs\"",
    "electron:build": "ELECTRON=true npm run build",
    "electron:package": "npm run electron:build && electron-builder",
    "electron:start": "electron electron/main.cjs"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@testing-library/svelte": "^5.2.8",
    "@tsconfig/svelte": "^5.0.5",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.39.4",
    "svelte-check": "^4.3.1",
    "typescript": "~5.8.3",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "wavesurfer.js": "^7.10.3"
  },
  "build": {
    "appId": "com.pedrecal.wavesync",
    "productName": "WaveSync",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Video"
    }
  }
}
